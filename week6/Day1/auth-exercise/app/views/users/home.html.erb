<h1>Hello, <%= @name %>!</h1>

  <% unless current_user.nil? %>
	  <%= link_to "My profile", "/profile" %><br>
	  <%= link_to "All profiles", "/users" %><br>
	  <%= link_to "Log out", "/logout", :method => :delete %><br>
  <% else %>
  <%= link_to "Log in", "/login" %><br>
  <%= link_to "Sign up", "/signup" %><br>
  <% end %>